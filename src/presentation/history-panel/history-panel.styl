:host
  display block
  position absolute
  bottom 9px
  width 100%
  text-align center

  .panel
    display inline-block
    padding 3rem
    padding-bottom 0.6rem
    text-align center

    &:hover
      .back, .forward
        i
          opacity 1
          transition opacity 200ms

    .back, .forward
      i
        font-size 36px
        opacity 0.2
        margin-right 20px

.move
  visibility hidden

  &.visible
    visibility visible

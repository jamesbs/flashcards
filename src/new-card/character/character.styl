:host
  display inline-block

  &.focused:not(.complete)
    color #00C1DE

  &.complete
    .hint
      font-weight bold

  &:not(.complete)
    .hint
      transition top 50ms ease-out


.pinyin-input
  border 0
  position absolute
  left 0

  & /deep/ input[type=text]
    width 50px
    padding 0
    border 0
    background transparent

    &:focus
      outline 0

.chinese
  font-size 10rem // font-size should be relative to phrase length
  line-height 1.14em

.pinyin
  font-size 1.5rem // font-size should be relative to phrase length
  padding-top 6px

  .input-wrapper
    position relative
    display inline-block
    height 28px

    &.length-3
      width 40px // should be relative to font-size

      input
        width 70px

    .hint
      position absolute
      top 0
      left 0

      &.input-active
        top -24px
        display block
        transition top 50ms ease-in

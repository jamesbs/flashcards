:host
  display inline-block

  &:hover
    color #00b8d4

    .pinyin input:not(:focus)
      color #00b8d4

  &.complete
    .hint
      font-weight bold


.pinyin-input
  border 0
  position absolute
  left 0

  & /deep/ input[type=text]
    width 50px
    padding 0
    border 0
    background transparent

    &:focus
      outline 0

.chinese
  font-size 10rem // font-size should be relative to phrase length
  line-height 1.14em

.pinyin
  font-size 1.5rem // font-size should be relative to phrase length

  div
    position relative
    display inline-block

    &.length-3
      width 40px // should be relative to font-size

      input
        width 50px

    .hint
      position absolute
      top 0
      left 0

      &.input-active
        top -30px
        opacity 0.6
        display block
        transition top 100ms ease-in

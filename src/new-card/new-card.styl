:host 
  display: block
  position: relative
  padding-left: 4rem

  .header
    color: #ef6c00
    font-family: Montserrat
    font-weight: 300

  & > .header
    font-size: 2.8rem
    letter-spacing: 1px
    margin-bottom: 1rem

  & > .actions
    position: absolute;
    left: 0
    top: 0
    bottom: 0
    width: 3.1rem
    background-color: green

.translation
  display: inline-block
  text-align: center

  .character
    display: inline-block

    .chinese
      font-size: 10rem // font-size should be relative to phrase length
      line-height: 1.14em
      
  .english
    font-size: 1.6rem // font-size should be relative to phrase length
    margin-top: 0.8rem
    
.examples
  margin-top: 1rem

  .header
    font-size: 1.4rem

  .chinese
    font-size: 1.2\3rem
